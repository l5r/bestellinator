<% content_for :title, @order.order_form.title %>
<% content_for :breadcrumb do %>
  <li><%= @order.order_form.title %></li>
<% end %>
<hgroup>
  <h1><%= @order.order_form.title %> - <%= t '.new_order' %></h1>
  <p>
    <%= t '.closes_at', closing_time: l(@order.order_form.closes_at, format: :short) %>
  </p>
</hgroup>

<p>
  <%= @order.order_form.description %>
</p>

<%= render "form", order: @order, order_form: @order.order_form %>

