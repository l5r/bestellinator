<% content_for :title, @order.order_form.title %>

<hgroup>
  <h2><%= t '.order_title', form_title: @order.order_form.title %></h2>
  <p><%= link_to t('.permalink'), @order %></p>
</hgroup>

<% if @order.paid? %>
  <div class="alert alert-success d-flex align-items-center" role="alert">
    <%= t '.order_confirmed' %>
  </div>
<% else %>
  <div class="alert alert-warning d-flex align-items-center" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg"
         width="16"
         height="16"
         fill="currentColor"
         class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"
         viewBox="0 0 16 16">
      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </svg>
    <%= t '.warning_order_unconfirmed' %>
  </div>
<% end %>

<%= render @order %>

<h3><%= t '.payment' %></h3>

<ul class="list-unstyled row row-cols-1 row-cols-md-2 g-4">
  <% @order.payments.not_cancelled.each do |payment| %>
    <li>
      <%= render payment %>
    </li>
  <% end %>
</ul>



